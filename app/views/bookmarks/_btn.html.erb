<% if post.present? %>
<% if current_user && post.bookmarked_by?(current_user) %>
 <%= link_to post_bookmark_path(post, post.bookmarks.find_by(user: current_user)), method: :delete, remote: true do %>
 <i class ="fas fa-star" aria-hidden="true" style="color: yellow;"></i>
 <%= post.bookmarks.count %> ブックマーク<% end %>
<% else %>
 <%= link_to post_bookmarks_path(post), method: :post, remote: true do %>
 <i class ="fas fa-star" aria-hidden="true"></i>
 <%= post.bookmarks.count %> ブックマーク<% end %>
 <% end %>
<% else %>
<p>投稿が見つかりません。</p>
<% end %>
